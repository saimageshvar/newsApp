<% if member_signed_in? %>

<!DOCTYPE html>
<html lang="en">
<head>
	
	<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/js/select2.min.js"></script>
</head>
<body>
	

	<div class="row">
		
		<div class="large-3 columns" style="position:fixed">
			<ul class="vertical menu" data-drilldown style="width: 200px; " >
				<li><a href="#"><h4>Categories</h4></a>
					<ul class="menu vertical nested">
						<li><%= link_to "All", '/?select=0'+ '&lang=' + String(@lang) %></li>
						<% @categories.each do |category| %>
						<li><%= link_to category.name, '/?select=' + String(category.id) + '&lang=' + String(@lang) %></li>
						<% end %>
					</ul>
				</li>

				<li><a href="#"><h4>Language</h4></a>
					<ul class="menu vertical nested">
						<li><%= link_to "All", '/?select=' + String(@id) + '&lang=all' %></li>
						<% @languages.each do |language| %>
						<li><%= link_to language.name, '/?select=' + String(@id) +'&lang=' + String(language.name) %></li>
						<% end %>
					</ul>
				</li>

				<li><a href="/home/list"><h4>New Feeds</h4></a></li>
				<li><a href="/home/logout"><h4>Sign Out</h4></a></li>
			</ul>
		</div>
		<div class="large-9 columns">
			<% if @feeds.empty? %>
			<h2>Sorry!No feeds found</h2>
			<% else %>
			<% @feeds.each do |feed| %>
			<h2><%= feed.name %> | <%= @categories.find(feed.c_id).name %>  
				<a href="/delete?feed_id=<%= feed.id %>">
					<span style="float:right">
						<%= image_tag "unlike.png",size: "32x30" %> 
					</span>  
				</a>
				
				<% star=@subscribes.where("user_id=? and feed_id=?",current_member.id,feed.id).first %>
				<% if star.star==0 %>
				<a href="/addFavorite?id=<%= star.id %>">
					<span style="float:center">
						<%= image_tag "star.png",size: "32x30" ,onmouseover: "hover(this);", onmouseout: "unhover(this);"%>
					</span>
				</a>
				<% else %>
				<a href="/removeFavorite?id=<%= star.id %>">
					<span >
						<%= image_tag "favorite.png",width: "32" , height: "32" %>
					</span> 
				</a>
				<% end %>
			</h2> <br>



			<script>
			function hover(element) {
				element.setAttribute('src', '/assets/favorite.png');
			}
			function unhover(element) {
				element.setAttribute('src', '/assets/star.png');
			}


			</script>
			<iframe  id="feedwind_1941463657648834"  width="700" src="http://feed.mikle.com/widget/?rssmikle_url=<%=feed.url%>&rssmikle_frame_width=700&rssmikle_frame_height=400&frame_height_by_article=3&rssmikle_target=_blank&rssmikle_font=Arial%2C%20Helvetica%2C%20sans-serif&rssmikle_font_size=12&rssmikle_border=off&responsive=off&text_align=left&text_align2=left&corner=off&scrollbar=on&autoscroll=on&scrolldirection=up&scrollstep=3&mcspeed=20&sort=Off&rssmikle_title=on&rssmikle_title_bgcolor=%23993300&rssmikle_title_color=%23FFFFFF&rssmikle_item_bgcolor=%23FFFFFF&rssmikle_item_title_length=55&rssmikle_item_title_color=%23171330&rssmikle_item_border_bottom=on&rssmikle_item_description=title_only&item_link=off&rssmikle_item_description_length=150&rssmikle_item_description_color=%23666666&rssmikle_item_date=gl1&rssmikle_timezone=Etc%2FGMT&datetime_format=%25b%20%25e%2C%20%25Y%20%25l%3A%25M%20%25p&item_description_style=text%2Btn&item_thumbnail=full&item_thumbnail_selection=auto&article_num=15&rssmikle_item_podcast=off&iframe_id=feedwind_1941463657648834&" scrolling="no" name="rssmikle_frame" marginwidth="0" marginheight="0" vspace="0" hspace="0" frameborder="0"></iframe><div style="font-size:10px; text-align:center; width:700px;"></div> 

			<br>
			<% end %>
			<% end %>
		</div>

	</div>









</body>
</html>

<% else %>

<h1> welcom to rails community</h1>
<%= link_to "Sign In", new_member_session_path, :method => :get %>
<%= link_to "Sign up", new_member_registration_path, :method => :get %>

<% end %>